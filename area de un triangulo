#include "stdafx.h"
#include "conio.h"
#include "iostream"

using namespace std;

void main()
{ float base, altura, area;
  cout << " ingrese la base del triangulo: " << endl;
  cin >> base;
  cout << " ingrese la altura del triangulo: " << endl;
  cin >> altura;
  area = (base*altura)/2;
  cout << "el area del triangulo es:  "<< area <<endl;
  getch();
}
