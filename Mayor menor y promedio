#include "stdafx.h"
#include "iostream"
#include "conio.h"

using namespace std;


void main()
{ int mayor=0, menor=1000000000,suma=0, n, num;
  float promedio=0;
  cout << " digite la cantidad de numeros: ";
  cin >> n;
  for (int i=1; i<=n ; i++)
  { cout << "ingresa un numero: ";
    cin >> num;
	if(mayor<num)
	   { mayor=num;
	   }
	if(menor>num)
       { menor=num;
	   } 
	suma = suma + num;
    promedio = suma / n;
  }
  cout << " la promedio es: " << promedio << endl;
  cout << " la suma es: " << suma << endl;
  cout << " el mayor es: " << mayor << endl;
  cout << " menor es: " << menor << endl;

  getch();
    
   
   }
	
